<div class="card-show">
  <img src="https://cdn.beebs.app/19180292-b886-40a4-9369-13557aef845f.jpg" />
  <div class="card-footer">
    <div class="card-show-infos">
      <h2> <%= @costume.name %></h2>
      <h2 class="card-show-pricing"> <%= @costume.price %>â‚¬/day </h2>
      <br>
      <p>Description : <%= @costume.description %></p>
      
      <p>Size: <%= @costume.age %> - <%= @costume.size %></p>
      <p><%= @costume.gender %></p>
      <br>
    </div>

    <div class="form-blank">
      <%= simple_form_for [@costume, @booking] do |f| %>
        <%= f.input :start_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
        <%= f.input :end_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
        <%= f.button :submit, class:"btn-submit" %>
      <% end %>
    </div>

  </div>
</div>
